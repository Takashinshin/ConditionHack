<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.repository.UserMapper">

<!-- マッピング定義(ユーザー)-->
<resultMap type="com.example.model.MUser" id="user">
	<id column="user_id" property="userId"/>
	<result column="password" property="password"/>
	<result column="user_name" property="userName"/>
	<result column="birthday" property="birthday"/>
	<result column="age" property="age"/>
	<result column="gender" property="gender"/>
	<result column="role" property="role"/>
	<association property="region" resultMap="region"/>
	<!-- <collection property="dataList" resultMap="u_data" columnPrefix="u_data_"/> -->
</resultMap>

<!-- マッピング定義（地域） -->
<resultMap type="com.example.model.Region" id="region">
	<id column="region_id" property="regionId"/>
	<result column="region_name" property="regionName"/>
</resultMap>

