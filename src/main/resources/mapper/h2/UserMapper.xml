<!-- ユーザー1件登録 -->
<insert id="insertOne">
	INSERT INTO m_user(
		user_id, password, user_name, 
		birthday, age, gender, role
	) VALUES(
		#{userId}, #{password}, #{userName}, 
		#{birthday}, #{age}, #{gender}, #{role}
		)
</insert>

<!-- ユーザー全件検索 -->
<select id="findMany" resultType="MUser">
	SELECT
		*
	FROM
		m_user
	<where>
		<if test="userId != null">
			user_id like #{userId}
		</if>
		<if test="userName != null">
			AND user_name like #{userName} 
		</if>
	</where>
</select>

<!-- ユーザー1件検索 -->
<select id="findOne" resultMap="user">
	SELECT
		*
	from 
		m_user
	left join m_region
	ON 
		m_user.region_id = m_region.region_id
	where 
		user_id = #{userId}
</select>

<update id="updateOne" >
	UPDATE
		m_user
	SET
		password = #{password},
		user_name = #{userName}
	WHERE
		user_id = #{userId}	
</update>

<delete id="deleteOne">
	DELETE FROM
		m_user
	WHERE
		user_id = #{userId}
</delete>
</mapper>